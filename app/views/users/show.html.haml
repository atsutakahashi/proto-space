.container.user-page
  %header.user-nav
    .media
      .media-left
        = image_tag(@user.avatar.thumb, alt: "profile_photo", class: "media-object", style: "width: 64px; height: 64px;")
      .media-body
        %h4#top-aligned-media.media-heading
          = @user.name
          %span.label.label-default.project-number
            29
            %i Projects
        .proto-user
          %span.degree= @user.position
        .row
          .col-md-6
            %h4 Profile
            %p= @user.profile
          .col-md-6
            %h4 Occupation
            %p= @user.occupation
.container.proto-list
  .row
    - @prototypes.each do |prototype|
      .col-sm-4.col-md-3.proto-content
        .dropdown.drop_menu_location
          %button#dropdownMenu.btn.btn-default.dropdown-toggle{aria: { expanded: "false"}, data: { toggle: "dropdown"}, type: "button"}
            Action
          %ul.dropdown-menu{aria: { labelledby: "dropdownMenu1"}}
            %li
              = link_to "Delete", prototype_path(prototype.id), method: :delete
            %li
              = link_to "Edit" , edit_prototype_path(prototype.id)
        .thumbnail
          = link_to image_tag(prototype.set_main_thumbnail), prototype_path(prototype)
          .caption
            %h3
              = prototype.title
            .proto-meta
              .proto-user
                = link_to prototype.user.name, user_path(prototype.user)
              .proto-posted
                = prototype.posted_date

